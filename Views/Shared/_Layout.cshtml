@using System.Text.Json
@using Microsoft.AspNetCore.Http
@{
    var userDataJson = Context.Session.GetString("userDataJson");
    var userSessionData = string.IsNullOrEmpty(userDataJson) ? null : JsonSerializer.Deserialize<User>(userDataJson);
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Mangaka</title>
    <link rel="stylesheet" href="~/css/index.css" asp-append-version="true" />
</head>
<body>
    <header>
        <nav class="header">
            <div class="content-title">
                <img class="logo" src="~/favicon.ico" alt="Alternate Text" />
                <h1 class="title">MANGAKA</h1>
            </div>
            <ul class="content-options">
                <li class="option">
                    <a class="text-option" asp-area="" asp-controller="Home" asp-action="Index">Home</a>
                </li>
                @if (userSessionData != null && userSessionData.Name != "Anónimo")
                {
                    <li class="option">
                        <a class="text-option" href="#">@userSessionData.Name</a>
                        
                    </li>
                    <li class="option">
                        <a class="text-option" asp-area="" asp-controller="Logout" asp-action="Index">Cerrar</a>
                    </li>
                } else
                {
                <li class="option">
                    <a class="text-option" asp-area="" asp-controller="Login" asp-action="Index">Iniciar Sesión</a>
                </li>    
                }
            </ul>
        </nav>
    </header>
    <div>
        <main role="main">
            @RenderBody()
        </main>
    </div>

    <footer>
        <p class="final-text">DISEÑADO Y DESARROLLADO POR LA EMPRESA KAPU</p>
    </footer>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
